# API Gateway Configuration

# Server Configuration
NODE_ENV=development
PORT=8080

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
VALID_API_KEYS=api-key-1,api-key-2,api-key-3
SERVICE_AUTH_TOKEN=service-to-service-auth-token

# Redis Configuration
REDIS_URL=redis://localhost:6379

# API Versioning
DEFAULT_API_VERSION=v1
SUPPORTED_API_VERSIONS=v1,v2
DEPRECATED_API_VERSIONS=

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Service Discovery
AUTH_SERVICE_HOST=localhost
AUTH_SERVICE_PORT=8081
FILE_SERVICE_HOST=localhost
FILE_SERVICE_PORT=8082
PROCESSING_SERVICE_HOST=localhost
PROCESSING_SERVICE_PORT=8083
NOTIFICATION_SERVICE_HOST=localhost
NOTIFICATION_SERVICE_PORT=8084

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Load Balancing
LOAD_BALANCING_STRATEGY=round-robin

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Logging
LOG_LEVEL=info
LOG_FORMAT=json